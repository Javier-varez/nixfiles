# Bind ctrl + [ to the escape key
keybind = ctrl+[=text:\x1b

# some transparency is good for life
background-opacity = 0.7

theme = light:catppuccin-latte,dark:catppuccin-macchiato

# makes the ghosty window match the selected theme.
window-theme = ghostty

# To reduce GTK overhead
gtk-single-instance = true

gtk-tabs-location = bottom
gtk-wide-tabs = false
window-decoration = false

# Allow setting up configs out of nix
config-file = ?custom
